<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- default -->
    
    <item android:state_pressed="false" android:state_focused="false">
        <shape >
            <solid
                android:color="#7d1b7e" />
            <stroke
                android:width="1dp"
                android:color="#7d1b7e" />
            <corners
                android:bottomLeftRadius="2dip"
                android:topRightRadius="2dip"
                android:topLeftRadius="2dip"
                android:bottomRightRadius="2dip"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
   
    <!-- button focused -->
    <item android:state_pressed="false" android:state_focused="true">
        <shape >
            <solid
                android:color="#7d1b7e" />
            <stroke
                android:width="1dp"
                android:color="#7d1b7e" />
            <corners
                android:bottomLeftRadius="2dip"
                android:topRightRadius="2dip"
                android:topLeftRadius="2dip"
                android:bottomRightRadius="2dip"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
   
   <!-- button pressed -->
    <item android:state_pressed="true" android:state_focused="false">
        <shape >
            <solid
                android:color="#7d1b7e" />
            <stroke
                android:width="1dp"
                android:color="#7d1b7e" />
            <corners
                android:bottomLeftRadius="2dip"
                android:topRightRadius="2dip"
                android:topLeftRadius="2dip"
                android:bottomRightRadius="2dip"/>
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>